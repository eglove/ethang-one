// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "mongodb"
  url      = env("NX_DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Habit {
  id            String @id @default(auto()) @map("_id") @db.ObjectId
  name          String @unique
  recurInterval String
  dueDate       Int
}

model FinanceRecord {
  id           String @id @default(auto()) @map("_id") @db.ObjectId
  accountName  String
  currentValue Float
  recordedDate Int
}

model TodaysCalories {
  id              String @id @default(auto()) @map("_id") @db.ObjectId
  birthday        Int
  currentCalories Int
  height          Int
  weight          Float
}
