// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "mongodb"
  url      = env("NX_DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

generator nestgraphql {
  provider = "node node_modules/prisma-nestjs-graphql"
  output   = "../apps/graphql-gateway/src/@generated/prisma-nestjs-graphql"
}

model FinanceRecord {
  id           String @id @default(auto()) @map("_id") @db.ObjectId
  accountName  String
  currentValue Float
  recordedDate Int
}

model Habit {
  id            String @id @default(auto()) @map("_id") @db.ObjectId
  name          String @unique
  recurInterval String
  dueDate       Int
}

model TodaysCalories {
  id              String @id @default(auto()) @map("_id") @db.ObjectId
  birthday        Int
  currentCalories Int
  height          Int
  weight          Float
}

model UnusedKey {
  id  String @id @default(auto()) @map("_id") @db.ObjectId
  key String @unique
}

model UsedKey {
  id  String @id @default(auto()) @map("_id") @db.ObjectId
  key String @unique
}

model User {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  email    String @unique
  password String @unique
}
