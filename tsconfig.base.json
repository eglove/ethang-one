{
  "compileOnSave": false,
  "compilerOptions": {
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "noEmit": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ES6",
    "types": ["jest"],
    "module": "esnext",
    "lib": ["es2017", "es2020", "dom", "dom.iterable", "esnext"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@ethang-one/environment": ["packages/environment/src/index.ts"],
      "@ethang-one/react-components": [
        "packages/react-components/src/index.ts"
      ],
      "@ethang-one/web-components": ["packages/web-components/src/index.ts"],
      "@ethang/web-components": ["dist/packages/web-components"],
      "@ethang/web-components/loader": ["dist/packages/web-components/loader"]
    },
    "plugins": [
      {
        "name": "typescript-plugin-css-modules"
      }
    ],
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "exclude": [
    "node_modules",
    "tmp",
    "packages/react-components/src/lib/generated/**"
  ]
}
